generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  fullname    String        // Nome completo do usuário
  username    String        // Nome de usuário
  password    String        // Senha
  is_admin    Boolean       @default(false)
}
